# Backend API Service Environment Variables
# Copy this file to .env and fill in your values

# Service Configuration
NODE_ENV=production
PORT=3001
SERVICE_TYPE=api

# CORS Configuration
ALLOWED_ORIGIN=https://yourfrontend.com,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Firebase Configuration (use one of these methods)
# Method 1: File path (recommended for local development)
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Method 2: JSON string (recommended for deployment)
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account",...}'

# Solana Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_API_KEY=your-helius-api-key
HELIUS_MAINNET_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-key

# Token Configuration
MKIN_TOKEN_MINT=BKDGf6DnDHK87GsZpdWXyBqiNdcNb6KnoFcYbWPUhJLA
TOKEN_MINT=BKDGf6DnDHK87GsZpdWXyBqiNdcNb6KnoFcYbWPUhJLA
MKIN_PRICE_USD=0.0003943

# Staking Configuration
STAKING_WALLET_ADDRESS=your-staking-vault-address
STAKING_PRIVATE_KEY=your-staking-vault-private-key-base58

# Gatekeeper Keypair (for MKIN transfers)
GATEKEEPER_KEYPAIR=[241,193,145,...]

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Discord Webhooks (for alerts)
DISCORD_ADMIN_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook

# Security Tokens
DISTRIBUTION_SECRET_TOKEN=your-distribution-secret
CRON_SECRET_TOKEN=your-cron-secret
SESSION_SECRET=your-session-secret
JWT_SECRET=your-jwt-secret

# Revenue Distribution Configuration
REVENUE_DISTRIBUTION_SECRET_TOKEN=your-revenue-distribution-secret
REVENUE_DISTRIBUTION_AMOUNT_USD=5.00
REVENUE_DISTRIBUTION_MIN_NFTS=30
REVENUE_DISTRIBUTION_CLAIM_FEE_USD=2.00
REVENUE_DISTRIBUTION_EXPIRY_DAYS=30
REVENUE_DISTRIBUTION_BATCH_SIZE=10
REVENUE_DISTRIBUTION_BATCH_DELAY_MS=6000
SECONDARY_SALE_CACHE_TTL_DAYS=30

# Optional: For running allocation script
BACKEND_API_URL=http://localhost:3001

# Optional API Keys
BIRDEYE_API_KEY=demo
MAGIC_EDEN_API_KEY=your-magic-eden-key

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://yourfrontend.com
